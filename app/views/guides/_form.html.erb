<%= form_with(model: guide) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Description" %>
    <%= form.rich_text_area :description %>
  </div>

  <div class="form-group">
    <%= form.label 'Attachment' %>
    <%= form.file_field :doc, multiple: false, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), guides_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), guide_path(@guide), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
