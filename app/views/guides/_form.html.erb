<%= form_with(model: [@job, @step, guide]) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Description" %>
    <%= form.rich_text_area :description %>
  </div>

  <% if !guide.doc.filename.nil? %>
    <div class="mb-4">
      <p class="text-sm font-medium text-gray-500">Existing document</p>
      <%= link_to guide.doc.filename, guide.doc %>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= form.label 'Attachment' %>
    <%= form.file_field :doc, multiple: false, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>
    <%= link_to t("cancel"), job_step_guides_path(@job, @step), class: "btn btn-secondary" %>
  </div>
<% end %>
