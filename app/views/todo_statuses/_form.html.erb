<%= form_with(model: todo_status) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), todo_statuses_path, class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), todo_status_path(@todo_status), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
