<%= content_for :title, "Jobs ##{@job.id}" %>
<%= turbo_stream_from @job %>

<div class="container px-4 mx-auto my-4">
  <div class="flex items-center justify-between mb-4">
    <div>

      <%
      nodes = [
            ['Home', '/'],
            ['JTBD Framework', '/jobs'],
            ['Jobs', '/jobs'],
            [@job.name, ''],
          ]
      %>
      <%= render "breadcrumbs", nodes: nodes %>

      <h1 class="h3 mt-3"><%= @job.name %></h1>
    </div>
  </div>


  <div class="p-8 bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded shadow">

    <div class="flex flex-wrap items-start justify-between">
      <div class="w-full lg:w-1/2">
          <%= render @job %>
          <%= link_to t("edit"), edit_job_path(@job), class: "btn btn-secondary mb-5" %>
      </div>
      <div class="w-full lg:w-1/2">
          <%= render "steps", steps: @job.steps %>
          <% if @job.steps.count == 0 %>
            <p class="text-sm font-medium text-gray-500 mb-5">None defined yet.</p>
          <% end %>
          <%= link_to "Manage steps", job_steps_path(@job), class: "btn btn-secondary" %>
      </div>
    </div>

  </div>
</div>
