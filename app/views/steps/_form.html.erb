<%= form_with(model: [@job, step]) do |form| %>
  <%= render "error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Description" %>
    <%= form.rich_text_area :description %>
  </div>

  <div class="form-group">
    <%= form.label "Notes" %>
    <%= form.rich_text_area :notes %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), job_steps_path(@job), class: "btn btn-secondary" %>
    <% else %>
      <%= link_to t("cancel"), job_step_path(@job, @step), class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
