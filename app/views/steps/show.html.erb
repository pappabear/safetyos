<%= content_for :title, "Steps ##{@step.id}" %>
<%= turbo_stream_from @step %>

<div class="container px-4 mx-auto my-4">
  <div class="flex items-center justify-between mb-4">
    <div>

      <%
      nodes = [
            ['Home', '/'],
            ['JTBD Framework', '/jobs'],
            ['Jobs', '/jobs'],
            [@job.name, job_path(@job)],
            ['Steps', job_steps_path(@job)],
            [@step.name, ''],
          ]
      %>
      <%= render "breadcrumbs", nodes: nodes %>

      <h1 class="h3 mt-3"><%= @step.name %></h1>
    </div>
  </div>


  <div class="p-8 bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded shadow">

    <div class="flex flex-wrap items-start justify-between">
      <div class="w-full lg:w-1/3">
          <%= render @step, name: @job.name %>
          <%= link_to t("edit"), edit_job_step_path(@job, @step), class: "btn btn-secondary mb-5" %>
      </div>
      <div class="w-full lg:w-2/3">

        <div>
          <div class="sm:hidden">
            <label for="tabs" class="sr-only">Select a tab</label>
            <!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
            <select id="tabs" name="tabs" class="block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-orange-500 focus:outline-none focus:ring-orange-500 sm:text-sm">
              <option selected>Guidance</option>
              <option>TODOs</option>
              <option>Resources</option>
            </select>
          </div>
          <div class="hidden sm:block">
            <div class="border-b border-gray-200">
              <nav class="-mb-px flex space-x-8" aria-label="Tabs">
                <a href="<%= job_step_guides_path(@job, @step) %>" class="flex whitespace-nowrap border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-200 hover:text-gray-700">
                  Guidance
                  <span class="ml-3 hidden rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-900 md:inline-block"><%= @step.guides.count %></span>
                </a>
                <a href="#" class="flex whitespace-nowrap border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-200 hover:text-gray-700">
                  Todos
                  <span class="ml-3 hidden rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-900 md:inline-block">52</span>
                </a>
                <a href="#" class="flex whitespace-nowrap border-b-2 border-transparent px-1 py-4 text-sm font-medium text-gray-500 hover:border-gray-200 hover:text-gray-700"> Resources </a>
              </nav>
            </div>

            <div class="mt-10">
              <dl class="space-y-10">

                <div>
                  <dt class="text-base font-semibold leading-7 text-gray-900">Guidance</dt>
                  <dd class="mt-2 text-base leading-7 text-gray-600">Practical advice on how to approach getting this Step completed.</dd>
                </div>
                <div>
                  <dt class="text-base font-semibold leading-7 text-gray-900">Todos</dt>
                  <dd class="mt-2 text-base leading-7 text-gray-600">A concrete real-life list of actions to take.</dd>
                </div>
                <div>
                  <dt class="text-base font-semibold leading-7 text-gray-900">Resources</dt>
                  <dd class="mt-2 text-base leading-7 text-gray-600">Useful reference material that can assit your planning.</dd>
                </div>

              </dl>
            </div>

          </div>
        </div>

      </div>
    </div>

  </div>
</div>
